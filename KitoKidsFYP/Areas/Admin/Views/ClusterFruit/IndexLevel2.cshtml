@{

    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}







<div class="row p-3">
    <div class="col-md-9">
        <h2 class="">Claster Of Fruits Level 2</h2>
    </div>
    <div class="col-md-3 mt-2">
        <a class="btn btn-primary" href="/Admin/ClusterFruit/CreateLevel2"><i class="bi bi-plus-circle"></i>&nbsp;Create New Fruit</a>
    </div>
</div>



<div class="border bg-light" style="border-radius:20px; padding:30px;">
    <table id="quizListTable" class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>

                <th>Name</th>
                <th>Image</th>
                
                <th> </th>


            </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>




@section Scripts
    {
    <script>

        $('#quizListTable').dataTable({

            "ajax": {

                "url": "/Admin/ClusterFruit/FruitTableLevel2",
                "type": "GET",
                "datatype": "json"

            }
            ,
            "columns": [

                { "data": "name" },
                
 
                {
                    "data": "imageUrl", "render": function (data) {
                        return '<img style="height:100px; width:100px" src="' + "/image/" + data + '" />';
                    }
                },



               
                {
                    "data": "id",
                    "render": function (data) {
                        return `<div class="text-center">
                                                <a class="btn btn-danger text-white" style="cursor:pointer; width: 120px;"
                                            onclick=Delete('/Admin/ClusterFruit/Delete?id=${data}')>
                                                            Delete
                                                </a>
                                            </div>`;
                    },
                    "width": "20%"
                }
            ]
        });


 





    </script>
}
